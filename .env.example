# ===========================================
# EMMA Admin Panel V2 - Environment Variables
# Healthcare-Grade Configuration Template
# ===========================================

# Firebase Client Configuration (Public - Safe for client-side)
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-firebase-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789"
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789:web:abcdef123456"

# Firebase Admin Configuration (Private - Server-side only)
# ⚠️ CRITICAL: These must never be exposed to client-side
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# NextAuth Configuration (Required for secure authentication)
NEXTAUTH_SECRET="your-nextauth-secret-minimum-32-characters-long-for-security"
NEXTAUTH_URL="http://localhost:3000"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="EMMA Admin Panel"
NEXT_PUBLIC_APP_VERSION="2.0.0"

# Healthcare-Specific Security Configuration
NEXT_PUBLIC_ENABLE_HIPAA_AUDIT="true"
NEXT_PUBLIC_ENABLE_AUDIT_LOGGING="true"
NEXT_PUBLIC_MAX_UPLOAD_SIZE="10485760"
NEXT_PUBLIC_SESSION_TIMEOUT="3600"
NEXT_PUBLIC_AUTO_LOGOUT_WARNING="300"

# Medical Education Configuration
NEXT_PUBLIC_ACADEMIC_YEAR="2024-2025"
NEXT_PUBLIC_DEFAULT_DEPARTMENT="EMERGENCY_MEDICINE"
NEXT_PUBLIC_MAX_PGY_LEVEL="7"
NEXT_PUBLIC_EVALUATION_DEADLINE_DAYS="30"

# Security & Compliance Configuration
NEXT_PUBLIC_ALLOWED_ORIGINS="http://localhost:3000,https://your-domain.com"
NEXT_PUBLIC_CSRF_PROTECTION="true"
NEXT_PUBLIC_ENABLE_2FA="false"
NEXT_PUBLIC_PASSWORD_MIN_LENGTH="8"

# Development & Debugging
NEXT_PUBLIC_ENABLE_DEBUG_MODE="true"
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING="false"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"

# Database Configuration (Development with Emulators)
NEXT_PUBLIC_USE_FIREBASE_EMULATORS="true"
NEXT_PUBLIC_FIRESTORE_EMULATOR_HOST="localhost:8080"
NEXT_PUBLIC_AUTH_EMULATOR_HOST="localhost:9099"
NEXT_PUBLIC_STORAGE_EMULATOR_HOST="localhost:9199"

# Feature Flags for Gradual Rollout
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES="true"
NEXT_PUBLIC_ENABLE_OFFLINE_MODE="false"
NEXT_PUBLIC_ENABLE_ADVANCED_REPORTING="false"
NEXT_PUBLIC_ENABLE_BULK_OPERATIONS="false"

# Email Configuration (for notifications)
NEXT_PUBLIC_ADMIN_EMAIL="admin@your-institution.edu"
NEXT_PUBLIC_SUPPORT_EMAIL="support@your-institution.edu"

# Institutional Configuration
NEXT_PUBLIC_INSTITUTION_NAME="Your Medical Institution"
NEXT_PUBLIC_PROGRAM_NAME="Emergency Medicine Residency"
NEXT_PUBLIC_TIMEZONE="America/New_York"